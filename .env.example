# Example environment variables for docker-compose
# Copy this file to .env and fill in your values

# Required: Your Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: External port to expose (default 8080)
# The container always runs on port 8080 internally
PORT=8080

# Optional: Video Intelligence detection batching window in seconds (default 10)
# Groups AI detections into summary messages to reduce Slack spam
VI_BATCH_WINDOW=10

# Optional: Maximum detections per batch to prevent memory issues (default 10000)
# Triggers early flush if batch size exceeds this limit
VI_MAX_BATCH_SIZE=10000
